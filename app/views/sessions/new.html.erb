<h2 class="title session-title">Sign In</h2>

<div class="padding">
    <%= form_for :session, url: session_path do |f| %>
    
        <div class="form-group">
            <%= f.label :email %> <br>
            <%= f.email_field :email, class:'form-control'  %>
        </div>
    
        <div class="form-group">
            <%= f.label :password %><br>
            <%= f.password_field :password, class:'form-control'  %>
        </div>
        <br>
        <%= f.submit "Sign In", class: "btn btn-outline-info"%>
    <% end %>

</div>