<p id="notice"><%= notice %></p>

<h1>Weathers</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Icon src</th>
      <th>Name</th>
      <th>Icon</th>
      <th>High temp</th>
      <th>Low temp</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.description %></td>
        <td><%= weather.icon_src %></td>
        <td><%= weather.name %></td>
        <td><%= weather.icon %></td>
        <td><%= weather.high_temp %></td>
        <td><%= weather.low_temp %></td>
        <td><%= weather.date %></td>
        <td><%= link_to 'Show', weather %></td>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

